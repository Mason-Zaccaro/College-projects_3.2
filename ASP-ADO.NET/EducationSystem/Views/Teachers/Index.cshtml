@model IEnumerable<EducationSystem.Models.Teacher>

@{
    ViewData["Title"] = "Преподаватели";
}

<h1>Преподаватели</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить нового преподавателя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Курсы</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>
                @if (item.Courses != null && item.Courses.Any())
                {
                    <ul>
                        @foreach (var course in item.Courses)
                        {
                            <li>@course.Title</li>
                        }
                    </ul>
                }
                else
                {
                    <span>Нет курсов</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
