@model EducationSystem.Models.Course

@{
    ViewData["Title"] = "Детали курса";
}

<h1>Детали курса</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">Преподаватель</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Teacher.Name)</dd>
        <dt class="col-sm-2">Студенты</dt>
        <dd class="col-sm-10">
            @if (Model.Students != null && Model.Students.Any())
            {
                <ul>
                    @foreach (var student in Model.Students)
                    {
                        <li>@student.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>Нет студентов</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Редактировать</a> |
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
