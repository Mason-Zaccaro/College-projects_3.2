@model LibraryManagement.Models.Book
@{
    Layout = "_Layout";
}

<h2>Редактировать книгу</h2>

<form method="post">
    <input asp-for="Id" type="hidden" />
    <div>
        <label>Название:</label>
        <input asp-for="Title" required />
    </div>
    <div>
        <label>Автор:</label>
        <select asp-for="AuthorId" asp-items="ViewBag.AuthorId" required></select>
    </div>
    <div>
        <label>Дата публикации:</label>
        <input asp-for="PublicationDate" type="date" />
    </div>
    <div>
        <input type="submit" value="Сохранить" />
        <a href="/Books">Назад к списку</a>
    </div>
</form>