@{
    ViewData["Title"] = "Редактор сообщений";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Заголовок страницы -->
            <div class="text-center mb-4">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-edit"></i> Редактор сообщений
                </h1>
                <p class="lead text-muted">Введите ваше сообщение и отправьте форму</p>
            </div>

            <!-- Проверяем, есть ли успешная отправка -->
            @if (ViewBag.IsSuccess == true)
            {
                <!-- Результат отправки формы -->
                <div class="card border-success shadow-lg mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-check-circle"></i>
                            Сообщение успешно отправлено!
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-light border" role="alert">
                            <h5 class="alert-heading">Ваше сообщение:</h5>
                            <p class="fs-5 text-dark mb-0">
                                "<em>@ViewBag.UserMessage</em>"
                            </p>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-clock text-info fs-3"></i>
                                        <h6 class="card-title mt-2">Время отправки</h6>
                                        <p class="card-text text-info">@ViewBag.SubmissionTime</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-text-width text-warning fs-3"></i>
                                        <h6 class="card-title mt-2">Длина сообщения</h6>
                                        <p class="card-text text-warning">@ViewBag.MessageLength символов</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/Page/Edit" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Отправить еще одно сообщение
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Форма для ввода сообщения -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-pen"></i> Форма для отправки сообщения
                    </h4>
                </div>
                <div class="card-body p-4">

                    <!-- Показываем ошибку, если есть -->
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <!-- HTML форма -->
                    <form method="post" action="/Page/Edit">
                        <div class="mb-3">
                            <label for="message" class="form-label">
                                <i class="fas fa-comment"></i>
                                Ваше сообщение:
                            </label>
                            <textarea class="form-control"
                                      id="message"
                                      name="message"
                                      rows="4"
                                      placeholder="Введите здесь ваше сообщение..."
                                      required>@ViewBag.UserMessage</textarea>
                            <div class="form-text">
                                Введите любое сообщение, которое хотите отправить
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="reset" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-eraser"></i>
                                Очистить
                            </button>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane"></i>
                                Отправить сообщение
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Навигация -->
            <div class="text-center mt-4">
                <a href="/Page/Welcome" class="btn btn-outline-primary me-2">
                    <i class="fas fa-home"></i> Главная страница
                </a>
                <a href="/Page/Greet/Пользователь" class="btn btn-outline-info">
                    <i class="fas fa-user"></i> Страница приветствия
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .shadow-lg {
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .btn {
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .fas {
        margin-right: 8px;
    }
</style>

<!-- Подключаем Font Awesome для иконок -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">