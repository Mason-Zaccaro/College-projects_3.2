@model EducationSystem.Models.Teacher
<h2>Изменить преподавателя</h2>
<form method="post">
    <input asp-for="Id" type="hidden" />
    <div>
        <label>Имя:</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <input type="submit" value="Сохранить" />
    <a href="/Teachers">Отмена</a>
</form>