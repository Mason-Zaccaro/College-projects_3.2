@model IEnumerable<EducationSystem.Models.Course>

@{
    ViewData["Title"] = "Курсы";
}

<h1>Курсы</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новый курс</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Преподаватель</th>
            <th>Количество студентов</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Teacher.Name)</td>
            <td>
                @(item.Students != null ? item.Students.Count() : 0)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
