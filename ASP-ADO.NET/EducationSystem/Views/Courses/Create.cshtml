@model EducationSystem.Models.Course
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Добавление курса";
}

<h1>Добавление нового курса</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TeacherId" class="control-label">Преподаватель</label>
                @if (ViewBag.TeacherId != null && ((SelectList)ViewBag.TeacherId).Any())
                {
                    <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                }
                else
                {
                    <div class="alert alert-warning">
                        В системе нет преподавателей. <a asp-controller="Teachers" asp-action="Create">Добавьте преподавателя</a> перед созданием курса.
                    </div>
                }
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
